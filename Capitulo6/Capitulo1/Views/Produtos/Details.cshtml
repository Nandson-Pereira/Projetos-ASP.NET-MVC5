@model Modelo.Cadastros.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando PRODUTO";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Detalhes PRODUTO
    </div>

    <div class="panel-body">
        @Html.Partial("~/Views/Produtos/_PartialDetailsAndDeleteContentPanelBody.cshtml", Model) <!--Partial View -->
    </div>

    <div class="panel-footer panel-info">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ProdutoId }, new { @class = "btn btn-info" })
        @Html.ActionLink("Voltar a Listagem", "Index", null, new { @class = "btn btn-info" })
    </div>
</div>


@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}