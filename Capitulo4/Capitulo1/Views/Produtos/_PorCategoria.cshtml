<!-- Conseito de Partial Views são visões que contêm código (HTML e/ou razor) e são projetadas para serem renderizadas como parte de
      uma visão. Elas não possuem layouts, como as visões, e podem ser "inseridas" dentro de diversas visões,
     como se fosse umcomponente ou controle.
 -->


@model IEnumerable<Capitulo1.Models.Produto>

<div class="panel panel-primary">
    <div class="panel-heading">
        PRODUTOS Registrados desta Categoria
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProdutoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>Categoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProdutoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer panel-info">
    </div>
</div>

